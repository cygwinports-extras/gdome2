inherit gnome2

DESCRIPTION="GNOME DOM C library"
HOMEPAGE="http://gdome2.cs.unibo.it/"
SRC_URI="http://gdome2.cs.unibo.it/tarball/${P}.tar.gz"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="setup devel"
PKG_CONTENTS[0]='usr/bin/*.dll usr/share/doc/'
PKG_CONTENTS[1]='--exclude=doc usr/bin/*-config usr/include/ usr/lib/ usr/share/'

DIFF_EXCLUDES='gdome-config.1'
